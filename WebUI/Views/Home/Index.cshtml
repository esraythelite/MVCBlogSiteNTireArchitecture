@{
    ViewData["Title"] = "Home Page";
}
@model IEnumerable<Entities.Article>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ArticleHeading)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ArticleContent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Topics)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ArticleHeading)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ArticleContent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.UserName)
            </td>
            <td>
                    @foreach(var topic in item.Topics)
                    {
                        <ul>
                            <li>
                                @Html.DisplayFor(modelItem=>topic.TopicName)
                            </li>
                        </ul>
                    }
            </td>
           
        </tr>
        }       

    </tbody>
</table>




